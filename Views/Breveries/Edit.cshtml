@model PolskieBrowary.Models.Brevery

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/forms.css" />
<h2 class="title">Edytuj browar</h2>
<hr />


<div class="form-box">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BreveryID" />
                <div class="form-group">
                    <label asp-for="BreveryName" class="control-label"></label>
                    <input asp-for="BreveryName" class="form-control" />
                    <span asp-validation-for="BreveryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Established" class="control-label"></label>
                    <input asp-for="Established" class="form-control" />
                    <span asp-validation-for="Established" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductionCapacity" class="control-label"></label>
                    <input asp-for="ProductionCapacity" class="form-control" />
                    <span asp-validation-for="ProductionCapacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
            <div class="back-link-box">
                <a asp-action="Index" class="back-link">Powrót do listy</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
