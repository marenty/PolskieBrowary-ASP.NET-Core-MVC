@model PolskieBrowary.Models.BeerGenre

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/forms.css" />

<h2 class="title">Edytuj gatunek</h2>

<hr />

<div class="form-box">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BeerGenreID" />
                <div class="form-group">
                    <label asp-for="GenreName" class="control-label"></label>
                    <input asp-for="GenreName" class="form-control" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreDescription" class="control-label"></label>
                    <textarea asp-for="GenreDescription" class="form-control"></textarea>
                    <span asp-validation-for="GenreDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
            <div class="back-link-box">
                <a asp-action="Index" class="back-link">Back to List</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
